                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:layout_toStartOf="@+id/notificationAlert"
                    android:layout_toLeftOf="@+id/notificationAlert"
